<% content_for :menu do %>
	<ul class="actions">
		<li><%= add_picture_link %></li>
		<li><%= edit_project_link %></li>
		<li><%= delete_project_link %></li>
	</ul>
<% end %>
<p id="notice"><%= notice %></p>
<div class="space">
	<% if @pictures.blank? %>
	<div class="nopics">
		<p>Pictures coming soon</p>
		<%= link_to 'Add Picture', new_prjct_picture_path(@prjct), class: 'btn btn-new' %>
	</div>
	<% else %>
		<% @pictures.each do |picture| %>
			<div class="thousandwords">
				<%= image_tag picture.image.url %>
			</div>
			<p><%= picture.caption %></p>
			<%= link_to 'Edit Img', edit_prjct_picture_path(@prjct, picture) %>
			<%= link_to 'Delete Image', [@prjct, picture], method: :delete %>
		<% end %>
	<% end %>
</div>

<div class="overview">
	<h2><%= @prjct.title %></h2>

	<p>
	  <%= @prjct.description %>
	</p>




	<%= link_to 'Edit', edit_prjct_path(@prjct) %> |
	<%= link_to 'Back', root_path %> |
	<%= link_to 'New Picture', new_prjct_picture_path(@prjct) %>
</div>